{
  "flow_type": "template",
  "flow_name": "language_select",
  "status": "released",
  "rows": [
    {
      "type": "begin_template",
      "name": "header",
      "value": "section_header",
      "action_list": "uncompleted | emit: uncompleted; "
    },
    {
      "name": "title",
      "value": "@global.language"
    },
    {
      "type": "end_template"
    },
    {
      "name": "language_select_options",
      "value": "@data.language"
    },
    {
      "type": "radio_button_grid",
      "name": "language_select",
      "value": "@fields._app_language",
      "parameter_list": "answer_list: @local.language_select_options; item_width: 200px"
    },
    {
      "type": "begin_display_group",
      "name": "dg_bottom",
      "parameter_list": "sticky: bottom",
      "style_list": "padding: 12px 24px;"
    },
    {
      "type": "button",
      "name": "button_completed",
      "value": "Save",
      "action_list": "click | emit: set_language: @local.language_select;\nclick | emit: completed;",
      "parameter_list": "variant: card; "
    },
    {
      "type": "end_display_group"
    }
  ]
}